<Page x:Class="MasterPolApplication.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Height="200" Background="#F4E8D3">
            <Grid.Effect>
                <DropShadowEffect Color="#FFA2A2A2" BlurRadius="7"/>
            </Grid.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Label Content="Логин:" HorizontalAlignment="Center" FontSize="15"></Label>
            <TextBox x:Name="LoginBox" Height="25" FontSize="15" HorizontalContentAlignment="Center"></TextBox>
            <Label Content="Пароль:" HorizontalAlignment="Center" FontSize="15"></Label>
            <PasswordBox x:Name="SchifreBox" Height="25" FontSize="15" HorizontalContentAlignment="Center"></PasswordBox>
                <Label Content=""></Label>
                <Button Content="ВОЙТИ" Height="25" FontSize="15" x:Name="LoginButton" Click="LoginButton_Click"></Button>
        </StackPanel>
        </Grid>

    </Grid>
</Page>
